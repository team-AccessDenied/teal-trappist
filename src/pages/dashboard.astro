---
// src/pages/dashboard.astro
import BaseLayout from './layouts/Base-Layout.astro';
---

<style>
  .dashboard-container {
    height: calc(100vh - [header-height] - [footer-height]);
    display: flex;
    flex-direction: column;
    width: 100%;
    padding: 20px;
    box-sizing: border-box;
  }

  .top-boxes {
    flex: 1;
    display: flex;
    gap: 20px;
    margin-bottom: 20px;
    width: 100%;
  }

  .top-box {
    flex: 1;
    width: 50%; /* Each top box takes half width */
  }

  .bottom-box {
    flex: 1;
    width: 100%;
  }

  .box {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24px;
    font-weight: bold;
    color: white;
    border-radius: 15px;
    transition: all 0.3s ease;
    cursor: pointer;
    position: relative;
    overflow: hidden;
    box-shadow: 0 10px 20px rgba(0,0,0,0.2);
    text-decoration: none;
    height: 100%;
    box-sizing: border-box;
  }

  /* Box color classes */
  .blue { background-color: #2196F3; }
  .pink { background-color: #E91E63; }
  .dark-purple { background-color: #673AB7; }
</style>

<BaseLayout page="Dashboard">
  <div class="dashboard-container">
    <div class="top-boxes">
      <a href="/user-info" class="box blue top-box">USER INFO</a>
      <a href="/controls" class="box pink top-box">CONTROLS</a>
    </div>
    <a href=https://thingspeak.mathworks.com/channels/2918587/private_show class="box dark-purple bottom-box">DATA ANALYSIS</a>
  </div>
</BaseLayout>